@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@model User


<div class="d-flex justify-content-evenly">
    <div>
        <h1 class="display-4">Register</h1>
        <form asp-action="CreateUser" asp-controller="Home" method="post">
            <div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Confirm">Confirm Password</label>
                <input asp-for="Confirm" class="form-control">
                <span asp-validation-for="Confirm" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary m-3">
        </form>
    </div>
    <div>
        @* Add login form through partial  *@
        @await Html.PartialAsync("_Login")
    </div>
</div>



