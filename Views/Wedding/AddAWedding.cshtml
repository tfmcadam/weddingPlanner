@model Wedding

<h1 class="text-center">Welcome @ViewBag.LogUser.FirstName</h1>
<div class="mx-auto w-50 mt-4 shadow rounded bg-secondary">
    <h1 class="display-5 text-center">Let's Add a Wedding</h1>
    <Form asp-action="CreateWedding" asp-controller="Wedding" >
        <input type="hidden" asp-for="UserId" value="@ViewBag.LogUser.UserId" >
        <div class="m-3"> 
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" class="form-control">
            <span class="text-white" asp-validation-for="WedderOne"></span>
        </div>
        <div class="m-3"> 
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo"class="form-control" >
            <span class="text-white" asp-validation-for="WedderTwo"></span>
        </div>
        <div class="m-3"> 
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control">
            <span class="text-white" asp-validation-for="Date"></span>
        </div>
        <div class="m-3"> 
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
            <span class="text-white" asp-validation-for="Address"></span>
        </div>
        <div class="d-flex justify-content-end m-3">
            <input type="submit" class="btn btn-secondary m-3">
        </div>
    </Form>
</div>